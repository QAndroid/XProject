<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="workshop1024.com.xproject.fragment.StoryFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="workshop1024.com.xproject.controller.activity.home.MainActivity">
    <!--下拉刷新-->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/savelist_swiperefreshlayout_pullrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Story列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savelist_recyclerview_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/newslist_item_bigcards" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>