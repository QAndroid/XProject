<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp">

        <ImageView
            android:id="@+id/feedback_imageview_icon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon" />

        <TextView
            android:id="@+id/feedback_textview_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/feedback_imageview_icon"
            android:text="Hello!"
            android:textColor="@color/xproject_daynight_textcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/feedback_textview_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/feedback_textview_hello"
            android:layout_below="@id/feedback_textview_hello"
            android:layout_toRightOf="@id/feedback_imageview_icon"
            android:text="We'd love to get feedback from you on out app. The more details youcan provide, better."
            android:textColor="@color/xproject_daynight_textcolor"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/feedback_textview_prompt"
            android:background="@null"
            android:src="@drawable/apptentive_ic_info" />
    </RelativeLayout>
</layout>

