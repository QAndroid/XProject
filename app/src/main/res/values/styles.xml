<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <!--介绍页面标题-->
    <style name="introduce_title">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3.0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28.0sp</item>
    </style>

    <!--介绍页面图标-->
    <style name="introduce_icon">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3.0</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--介绍页面说明-->
    <style name="introduce_description">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3.0</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="introduce_line">
        <item name="android:background">#55000000</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
