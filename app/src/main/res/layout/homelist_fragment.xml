<?xml version="1.0" encoding="utf-8"?>
<!--故事列表Fragment布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:name="workshop1024.com.xproject.fragment.StoryFragment"
              android:orientation="vertical"
              tools:context="workshop1024.com.xproject.fragment.StoryFragment">
    <!--下拉刷新-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/stroy_swiperefreshlayout_pullrefresh"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <!--Story列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/story_recyclerview_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/newslist_item_bigcards"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>