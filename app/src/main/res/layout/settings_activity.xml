<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.setting.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/settings_appbarlayout_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar_navigator"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/settings_textview_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_background"
        android:padding="16dp"
        android:text="Display"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/settings_textview_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_background"
        android:padding="16dp"
        android:text="Sync"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/settings_textview_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_background"
        android:padding="16dp"
        android:text="Widget"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/settings_textview_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_background"
        android:padding="16dp"
        android:text="Advance"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>