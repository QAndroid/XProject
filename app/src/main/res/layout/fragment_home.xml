<!--主页标准-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="vertical"
              tools:context=".HomeFragment">

    <!--Tab标签-->
    <android.support.design.widget.TabLayout
        android:background="@color/main_toolbar_background"
        android:id="@+id/home_tablayout_tabs"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:tabIndicatorColor="@color/home_tablayout_indicatorcolor"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/home_tablayout_textselectedcolor"
        app:tabTextColor="@color/home_tablayout_textcolor"/>

    <!--Tab内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager_fragments"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
