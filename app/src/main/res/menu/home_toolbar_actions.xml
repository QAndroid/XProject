    <item
        android:id="@+id/toolbar_action_refresh"
        android:title="@string/toolbar_action_refresh"
        app:showAsAction="never"/>

    <item
        android:id="@+id/toolbar_action_rate"
        android:title="@string/toolbar_action_rate"
        app:showAsAction="never"/>

    <item
        android:id="@+id/toolbar_action_product"
        android:title="@string/toolbar_action_product"
