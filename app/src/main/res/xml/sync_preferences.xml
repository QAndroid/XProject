<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="@string/settings_preferencecategory_sync_key"
        android:title="@string/settings_preferencecategory_sync_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/settings_preference_autodatarefresh_key"
            android:title="@string/settings_preference_autodatarefresh_title" />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Refresh Interval"
            android:entries="@array/settings_refresh_interval"
            android:entryValues="@array/settings_refresh_interval_codes"
            android:key="@string/settings_preference_refreshinterval_key"
            android:title="@string/settings_preference_refreshinterval_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/settings_preference_synconlywifi_key"
            android:title="@string/settings_preference_synconlywifi_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/settings_preference_refreshonlaunch_key"
            android:title="@string/settings_preference_refreshonlaunch_title" />
    </PreferenceCategory>
</PreferenceScreen>